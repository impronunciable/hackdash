header    
  .container
    .row-fluid
      .span3
       form.formSearch
        input.search-query.input-large.span8#searchInput(type='text',placeholder='Search a project')
      .span5
        h1
          a(href="/")= title
      .span4
        
        .createProject.pull-right
         .btn-group
          if(user)
            a.btn.btn-large.btn-custom(href="/projects/create").tooltips(rel='tooltip', data-placement='bottom', data-original-title='Create a new project') New Project
            a.btn.btn-large.btn-profile(href="/users/profile")
             img.avatar(src=user.picture + '?s=50').tooltips(rel='tooltip', data-placement='bottom', data-original-title='Edit profile')
            a.btn.btn-large.btn-link.logout(href="/logout").tooltips(rel='tooltip', data-placement='bottom', data-original-title='Log out from Hackdash') Logout
          else
            a.btn.btn-medium.btn-custom(href="/login") Log in to create a project
